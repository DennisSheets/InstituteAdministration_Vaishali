@{
    ViewData["Title"] = "Home Page";
}
@using InstituteAdministration.Models
@model List<Student>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div class="text-center">
    <h1 class="display-4">Welcome to InfoTech!</h1>
    <p><a asp-controller="Home" asp-action="AddStudent">Add Students</a></p>
    <p><a asp-controller="List" asp-action="Index">List Students</a></p>
    <p><a asp-controller="Search" asp-action="Index">Search Students</a></p>
</div>

@if (Model.Count == 0)
{
    <p>No students yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Position Name</th>
            <th>Teacher</th>
        </tr>
        @foreach (Student student in Model)
        {
            <tr>
                <td><a asp-controller="Home" asp-action="Detail" asp-route-id="@student.Id">@student.Name</a></td>
                <td>@student.Teacher.Name</td>
            </tr>
        }
    </table>
}
